<h1>Menu</h1>

<ul class="nav nav-pills">
	<% @sections.each do |section| %>	
		<li class="nav-item">
	  		<%= link_to section, menu_path(section: section), class: "nav-link #{ params[:section] == section && 'active'}" %>
	  	</li>

  	<% end %> 
</ul>

<ul class="nav nav-pills">
	<% @sorting_options.each do |option| %>	
		<li class="nav-item">
	  		<%= link_to option[:label], menu_path(section:params[:section], order_by: option[:name]), class: "nav-link #{ params[:order_by] == option[:name] && 'active'}" %>
	  	</li>

  	<% end %> 
</ul>
	  
	<% @food_items.each do |food_item| %>
		<%= link_to(food_item_path(food_item.id)) do %>
			<div class="col-sm-5">
				<div class="card">
					<div class="card-block">
						<%= image_tag food_item.image_url_or_auto %>
					</div>
					<h4 class="card-block strong">
						<%= food_item.name %>
						<span class="label label-default"> <%= food_item.orders.size %> </span>
					</h4>
					<div class="card-block">
						<%= food_item.description %>
					</div>
					<div class="card-block">
					 <%=link_to 'Order', new_food_item_order_path(food_item.id),  class: "card-link btn btn-danger" %>
					 </div>
				</div>
			</div>
		<% end %>
	<% end %>
	