<!DOCTYPE html>
<html>
<head>
  <title>NhaHang</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='container'>
	<nav class="navbar navbar-light bg-faded">
	  <a class="navbar-brand" href="<%= root_path %>">Homepage</a>
	  <ul class="nav navbar-nav">
	    <li class="nav-item active">
	      <a class="nav-link" href="<%= menu_path %>">Menu <span class="sr-only">(current)</span></a>
	    </li>
	    <li class="nav-item">
	      <a class="nav-link" href="<%= contact_us_path %> ">Contact Us </a>
	    </li>
	  </ul>

	  <%= form_tag(food_items_path, :method => "get", class: "navbar-form form-inline pull-xs-right", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], class: " form-control", placeholder: "Search" %>   
      	<button class="btn btn-success-outline "  type="submit">Submit</button>	
  	  <% end %>
			  
	  
	</nav>
</div>
<div class='container'>
	<% if flash[:error] %>
	<div class="alert alert-danger"> <%= flash[:error] %> </div>
	<% end %>

	<% if flash[:success] %>
	<div class="alert alert-success"> <%= flash[:success] %> </div>
	<% end %>

	<%= yield %>
</div>
</body>
</html>
